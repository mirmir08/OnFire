<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/incendio_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".incendio">

    <!-- Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Left Logo -->
    <FrameLayout
        android:id="@+id/topLogoContainer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/circle_cream"
        android:elevation="4dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/fuegologo"
            android:contentDescription="Logo" />
    </FrameLayout>

    <!-- Bottom Bar Background -->
    <View
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#510b03"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Center Button (Fire) -->
    <FrameLayout
        android:id="@+id/btnFire"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_fire_button"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBar"
        app:layout_constraintTop_toTopOf="@+id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_fire"
            app:tint="#250302"
            android:contentDescription="Fire Button" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>